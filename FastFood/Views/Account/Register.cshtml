@model FastFoodOnline.Models.RegisterViewModel
@{
    ViewData["Title"] = "Đăng ký tài khoản";
}

<style>
    :root {
        --kfc-red: #E4002B;
        --kfc-dark: #202124;
        --kfc-gray: #f8f9fa;
    }

    body {
        background-color: var(--kfc-gray);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .register-wrapper {
        min-height: 90vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 40px 20px;
    }

    .kfc-register-card {
        background: white;
        border-radius: 20px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
        padding: 2.5rem;
        width: 100%;
        max-width: 800px; /* Rộng hơn form login */
        border-top: 5px solid var(--kfc-red);
    }

    .register-header h1 {
        color: var(--kfc-dark);
        font-weight: 800;
        text-transform: uppercase;
        font-size: 1.8rem;
        margin-bottom: 0.5rem;
    }

    .register-header p {
        color: #666;
        font-size: 0.95rem;
        margin-bottom: 2rem;
    }

    /* Section Headers (Thông tin cá nhân, Bảo mật) */
    .form-section-title {
        color: var(--kfc-red);
        font-weight: 700;
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 1px;
        margin-bottom: 1rem;
        margin-top: 0.5rem;
        border-bottom: 2px solid #f0f0f0;
        padding-bottom: 8px;
        display: inline-block;
        width: 100%;
    }

    /* Inputs */
    .form-control {
        border-radius: 10px;
        padding: 12px 15px;
        border: 1px solid #dee2e6;
        background-color: #fcfcfc;
        transition: all 0.3s;
    }

        .form-control:focus {
            border-color: var(--kfc-red);
            box-shadow: 0 0 0 0.2rem rgba(228, 0, 43, 0.15);
            background-color: #fff;
        }

    .form-label {
        font-weight: 600;
        color: var(--kfc-dark);
        font-size: 0.9rem;
        margin-bottom: 6px;
    }

    /* Input Group cho Datepicker */
    .input-group-text {
        background-color: white;
        border-left: 0;
        border-radius: 0 10px 10px 0;
        border-color: #dee2e6;
        color: var(--kfc-red);
    }

    .input-group .form-control {
        border-right: 0;
    }

        .input-group .form-control:focus + .input-group-text {
            border-color: var(--kfc-red);
        }

    /* Buttons */
    .btn-kfc-primary {
        background-color: var(--kfc-red);
        color: white;
        font-weight: 800;
        text-transform: uppercase;
        border-radius: 50px;
        padding: 12px 30px;
        border: none;
        letter-spacing: 0.5px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 10px rgba(228, 0, 43, 0.3);
    }

        .btn-kfc-primary:hover {
            background-color: #c40024;
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(228, 0, 43, 0.4);
            color: white;
        }

    .btn-kfc-cancel {
        color: #666;
        font-weight: 600;
        border-radius: 50px;
        padding: 12px 25px;
        border: 1px solid #ddd;
        background: white;
        transition: all 0.2s;
    }

        .btn-kfc-cancel:hover {
            background-color: #f1f1f1;
            color: var(--kfc-dark);
            text-decoration: none;
        }

    .register-footer a {
        color: var(--kfc-red);
        font-weight: 700;
        text-decoration: none;
    }

        .register-footer a:hover {
            text-decoration: underline;
        }
</style>

<div class="register-wrapper fade-in-up">
    <div class="kfc-register-card">
        <div class="register-header text-center">
            <h1>Đăng ký thành viên</h1>
            <p>Trở thành thành viên để nhận ưu đãi độc quyền!</p>
        </div>

        <form asp-action="Register" method="post">
            @* --- Phần 1: Thông tin cá nhân --- *@
            <div class="row g-3">
                <div class="col-12">
                    <span class="form-section-title">Thông tin cá nhân</span>
                </div>

                <div class="col-md-6">
                    <label asp-for="FullName" class="form-label">Họ và tên</label>
                    <input asp-for="FullName" class="form-control" placeholder="Nguyễn Văn A" />
                    <span asp-validation-for="FullName" class="text-danger small mt-1 d-block"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="DateOfBirth" class="form-label">Ngày sinh</label>
                    <div class="input-group">
                        <input asp-for="DateOfBirth" class="form-control" type="date" />
                        <span class="input-group-text">
                            <i class="bi bi-calendar-event"></i>
                        </span>
                    </div>
                    <span asp-validation-for="DateOfBirth" class="text-danger small mt-1 d-block"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" placeholder="example@email.com" />
                    <span asp-validation-for="Email" class="text-danger small mt-1 d-block"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="PhoneNumber" class="form-label">Số điện thoại</label>
                    <input asp-for="PhoneNumber" class="form-control" placeholder="09xxxxxxx" />
                    <span asp-validation-for="PhoneNumber" class="text-danger small mt-1 d-block"></span>
                </div>

                <div class="col-12">
                    <label asp-for="Address" class="form-label">Địa chỉ giao hàng</label>
                    <input asp-for="Address" class="form-control" placeholder="Số nhà, tên đường, phường/xã..." />
                    <span asp-validation-for="Address" class="text-danger small mt-1 d-block"></span>
                </div>

                @* --- Phần 2: Bảo mật --- *@
                <div class="col-12 mt-4">
                    <span class="form-section-title">Bảo mật</span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Password" class="form-label">Mật khẩu</label>
                    <input asp-for="Password" class="form-control" placeholder="••••••••" type="password" />
                    <span asp-validation-for="Password" class="text-danger small mt-1 d-block"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="ConfirmPassword" class="form-label">Nhập lại mật khẩu</label>
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="••••••••" type="password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger small mt-1 d-block"></span>
                </div>

                @* --- Action Buttons --- *@
                <div class="col-12 mt-4 pt-2">
                    <div class="d-flex justify-content-between align-items-center">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-kfc-cancel">
                            Hủy bỏ
                        </a>
                        <button type="submit" class="btn btn-kfc-primary px-5">
                            HOÀN TẤT ĐĂNG KÝ
                        </button>
                    </div>
                </div>
            </div>
        </form>

        <div class="register-footer text-center mt-4 pt-3 border-top">
            <p class="text-muted small mb-0">
                Bạn đã có tài khoản rồi? <a asp-action="Login">Đăng nhập ngay</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}