@model FastFoodOnline.Models.Account

@{
    ViewData["Title"] = "Thông tin cá nhân";
}

<style>
    :root {
        --kfc-red: #E4002B;
        --kfc-dark: #202124;
        --kfc-gray: #f8f9fa;
    }

    /* --- SIDEBAR STYLES (Đồng bộ với MyOrders) --- */
    .profile-card {
        border: none;
        border-radius: 16px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.05);
        overflow: hidden;
        background: white;
        height: 100%;
    }

    .avatar-section {
        background: linear-gradient(135deg, #fff0f3 0%, #ffffff 100%);
        padding: 30px 20px;
    }

    .user-avatar-icon {
        font-size: 80px;
        color: var(--kfc-red);
        background: white;
        border-radius: 50%;
        width: 100px;
        height: 100px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 15px;
        box-shadow: 0 5px 15px rgba(228, 0, 43, 0.15);
    }

    .sidebar-menu .list-group-item {
        border: none;
        padding: 15px 20px;
        font-weight: 600;
        color: #666;
        transition: all 0.2s;
        border-left: 4px solid transparent;
    }

        .sidebar-menu .list-group-item:hover {
            background-color: #fcfcfc;
            color: var(--kfc-red);
            padding-left: 25px;
        }

        .sidebar-menu .list-group-item.active {
            background-color: #fff0f3;
            color: var(--kfc-red);
            border-left-color: var(--kfc-red);
        }

    /* --- FORM CARD STYLES --- */
    .kfc-form-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.05);
        border: none;
        overflow: hidden;
    }

    .kfc-card-header {
        background-color: white;
        padding: 20px 25px;
        border-bottom: 2px solid #f0f0f0;
    }

        .kfc-card-header h4 {
            color: var(--kfc-dark);
            font-weight: 800;
            text-transform: uppercase;
            margin: 0;
            border-left: 5px solid var(--kfc-red);
            padding-left: 15px;
            letter-spacing: 0.5px;
        }

    /* Inputs */
    .form-label {
        font-weight: 600;
        color: var(--kfc-dark);
        margin-bottom: 8px;
        font-size: 0.9rem;
    }

    .form-control {
        border-radius: 10px;
        padding: 12px 15px;
        border: 1px solid #dee2e6;
        background-color: #fcfcfc;
        transition: all 0.3s;
    }

        .form-control:focus {
            border-color: var(--kfc-red);
            box-shadow: 0 0 0 0.2rem rgba(228, 0, 43, 0.15);
            background-color: #fff;
        }

        .form-control:disabled {
            background-color: #e9ecef;
            opacity: 1;
            border-color: #e0e0e0;
        }

    /* Buttons */
    .btn-kfc-save {
        background-color: var(--kfc-red);
        color: white;
        font-weight: 800;
        text-transform: uppercase;
        border-radius: 50px;
        padding: 12px 30px;
        border: none;
        letter-spacing: 0.5px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 10px rgba(228, 0, 43, 0.3);
    }

        .btn-kfc-save:hover {
            background-color: #c40024;
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(228, 0, 43, 0.4);
            color: white;
        }

    /* Role Badge */
    .badge-role {
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 0.75rem;
        font-weight: 700;
        text-transform: uppercase;
    }

    .role-admin {
        background-color: var(--kfc-dark);
        color: white;
    }

    .role-user {
        background-color: #f0f0f0;
        color: #666;
    }
</style>

<div class="row fade-in-up mb-5">
    @* --- CỘT TRÁI: SIDEBAR --- *@
    <div class="col-lg-3 col-md-4 mb-4">
        <div class="profile-card">
            <div class="avatar-section text-center">
                <div class="user-avatar-icon">
                    <i class="bi bi-person-fill"></i>
                </div>
                <h5 class="fw-bold mb-1 text-uppercase">@Model.FullName</h5>
                <p class="text-muted small mb-2 text-truncate">@Model.Email</p>

                @if (Model.RoleId == 1)
                {
                    <span class="badge badge-role role-admin">Quản trị viên</span>
                }
                else
                {
                    <span class="badge badge-role role-user">Khách hàng</span>
                }
            </div>

            <div class="list-group list-group-flush sidebar-menu">
                <a href="@Url.Action("Profile", "Account")" class="list-group-item list-group-item-action active">
                    <i class="bi bi-person-vcard-fill me-2"></i> Thông tin cá nhân
                </a>
                <a href="@Url.Action("MyOrders", "Account")" class="list-group-item list-group-item-action">
                    <i class="bi bi-bag-check me-2"></i> Đơn hàng của tôi
                </a>
                @if (Model.RoleId == 1)
                {
                    <a href="@Url.Action("Index", "Dashboard", new { area = "Admin" })" class="list-group-item list-group-item-action">
                        <i class="bi bi-speedometer2 me-2"></i> Quản trị hệ thống
                    </a>
                }
                <a href="@Url.Action("Logout", "Account")" class="list-group-item list-group-item-action text-danger fw-bold border-top mt-2">
                    <i class="bi bi-box-arrow-right me-2"></i> Đăng xuất
                </a>
            </div>
        </div>
    </div>

    @* --- CỘT PHẢI: FORM CẬP NHẬT --- *@
    <div class="col-lg-9 col-md-8">
        <div class="kfc-form-card">
            <div class="kfc-card-header">
                <h4>Cập nhật hồ sơ</h4>
            </div>
            <div class="card-body p-4">
                <form asp-action="UpdateProfile" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="Email" />
                    <input type="hidden" asp-for="RoleId" />

                    @* Nhóm thông tin cơ bản *@
                    <h6 class="text-uppercase text-muted fw-bold mb-3 small ls-1">Thông tin chung</h6>
                    <div class="row g-3 mb-4">
                        <div class="col-md-6">
                            <label asp-for="Email" class="form-label">Email đăng nhập</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0 text-muted"><i class="bi bi-envelope"></i></span>
                                <input asp-for="Email" class="form-control border-start-0 ps-0" disabled />
                            </div>
                            <small class="text-muted" style="font-size: 0.75rem;">Email không thể thay đổi để đảm bảo bảo mật.</small>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="FullName" class="form-label">Họ và tên</label>
                            <input asp-for="FullName" class="form-control" placeholder="Nhập họ tên của bạn" required />
                        </div>
                    </div>

                    <div class="row g-3 mb-4">
                        <div class="col-md-6">
                            <label asp-for="PhoneNumber" class="form-label">Số điện thoại</label>
                            <input asp-for="PhoneNumber" class="form-control" placeholder="09xxxxxxx" />
                        </div>
                        <div class="col-md-6">
                            <label asp-for="DateOfBirth" class="form-label">Ngày sinh</label>
                            <input asp-for="DateOfBirth" class="form-control" type="date" />
                        </div>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Address" class="form-label">Địa chỉ giao hàng mặc định</label>
                        <textarea asp-for="Address" class="form-control" rows="3" placeholder="Nhập địa chỉ để giao hàng nhanh hơn..."></textarea>
                    </div>

                    @* Nhóm bảo mật *@
                    <hr class="dashed-line my-4" style="border-top: 1px dashed #e0e0e0;">

                    <h6 class="text-uppercase text-danger fw-bold mb-3 small ls-1">
                        <i class="bi bi-shield-lock me-1"></i> Bảo mật
                    </h6>
                    <div class="mb-4 bg-light p-3 rounded-3">
                        <label class="form-label">Đổi mật khẩu mới</label>
                        <input type="password" name="Password" class="form-control" placeholder="Chỉ nhập nếu bạn muốn thay đổi mật khẩu..." autocomplete="new-password" />
                    </div>

                    @* Action Button *@
                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-kfc-save">
                            <i class="bi bi-check-circle-fill me-2"></i> Lưu thay đổi
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>