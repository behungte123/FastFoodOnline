@model FastFoodOnline.Models.Order

@{
    ViewData["Title"] = "Chi tiết đơn hàng #" + Model.Id;
}

<style>
    :root {
        --kfc-red: #E4002B;
        --kfc-dark: #202124;
        --kfc-gray: #f8f9fa;
    }

    /* Card Styles */
    .kfc-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.05);
        overflow: hidden;
        margin-bottom: 20px;
        border: none;
    }

    .kfc-card-header {
        background-color: white;
        padding: 20px 25px;
        border-bottom: 2px solid #f0f0f0;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

        .kfc-card-header h5 {
            color: var(--kfc-dark);
            font-weight: 800;
            text-transform: uppercase;
            margin: 0;
            border-left: 5px solid var(--kfc-red);
            padding-left: 15px;
            letter-spacing: 0.5px;
        }

    /* Table Styles */
    .kfc-table-detail thead th {
        background-color: #fff0f3; /* Hồng nhạt */
        color: var(--kfc-red);
        font-weight: 700;
        text-transform: uppercase;
        font-size: 0.85rem;
        border: none;
        padding: 15px;
    }

    .kfc-table-detail tbody td {
        padding: 15px;
        vertical-align: middle;
        border-bottom: 1px dashed #e0e0e0; /* Nét đứt giống hóa đơn */
        color: #444;
        font-weight: 500;
    }

    .kfc-table-detail tbody tr:last-child td {
        border-bottom: none;
    }

    /* Info Box Styles */
    .info-label {
        color: #888;
        font-size: 0.9rem;
        font-weight: 600;
        margin-bottom: 5px;
        display: block;
    }

    .info-value {
        color: var(--kfc-dark);
        font-weight: 700;
        font-size: 1rem;
    }

    .total-price-display {
        color: var(--kfc-red);
        font-size: 2rem;
        font-weight: 900;
        letter-spacing: -1px;
    }

    /* Badges (Copy from MyOrders for consistency) */
    .status-badge {
        padding: 8px 16px;
        border-radius: 30px;
        font-size: 0.9rem;
        font-weight: 700;
        text-transform: uppercase;
        display: inline-block;
        width: 100%;
        text-align: center;
    }

    .status-pending {
        background-color: #fff3cd;
        color: #856404;
    }

    .status-processing {
        background-color: #cff4fc;
        color: #055160;
    }

    .status-completed {
        background-color: #d1e7dd;
        color: #0f5132;
    }

    .status-cancelled {
        background-color: #f8d7da;
        color: #842029;
    }

    .status-default {
        background-color: #e2e3e5;
        color: #41464b;
    }

    .btn-back {
        color: #666;
        font-weight: 600;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        padding: 8px 16px;
        border-radius: 50px;
        background-color: #f0f0f0;
        transition: all 0.2s;
    }

        .btn-back:hover {
            background-color: #e0e0e0;
            color: var(--kfc-dark);
        }
</style>

<div class="container fade-in-up mb-5">
    @* --- Header Nav --- *@
    <div class="d-flex align-items-center justify-content-between mb-4">
        <div>
            <h2 class="fw-bold text-uppercase mb-1">Chi tiết đơn hàng</h2>
            <p class="text-muted mb-0">Xem lại thông tin món ăn và trạng thái giao hàng</p>
        </div>
        <a href="@Url.Action("MyOrders")" class="btn-back">
            <i class="bi bi-arrow-left me-2"></i> Quay lại
        </a>
    </div>

    <div class="row">
        @* --- LEFT COLUMN: ITEM LIST --- *@
        <div class="col-lg-8">
            <div class="kfc-card h-100">
                <div class="kfc-card-header">
                    <h5><i class="bi bi-receipt me-2"></i> Danh sách món ăn</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table kfc-table-detail mb-0">
                            <thead>
                                <tr>
                                    <th style="width: 45%;">Sản phẩm</th>
                                    <th class="text-center">Đơn giá</th>
                                    <th class="text-center">Số lượng</th>
                                    <th class="text-end">Thành tiền</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Items)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="rounded-circle bg-light d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px; color: var(--kfc-red);">
                                                    <i class="bi bi-basket2-fill"></i>
                                                </div>
                                                <div>
                                                    @if (item.Food != null)
                                                    {
                                                        <span class="fw-bold">@item.Food.Name</span>
                                                    }
                                                    else if (item.Combo != null)
                                                    {
                                                        <span class="fw-bold">@item.Combo.Name</span>
                                                        <span class="badge bg-danger ms-1" style="font-size: 0.6rem;">COMBO</span>
                                                    }
                                                </div>
                                            </div>
                                        </td>
                                        <td class="text-center text-muted">@item.UnitPrice.ToString("N0") ₫</td>
                                        <td class="text-center fw-bold">x @item.Quantity</td>
                                        <td class="text-end fw-bold text-dark">@((item.UnitPrice * item.Quantity).ToString("N0")) ₫</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        @* --- RIGHT COLUMN: ORDER SUMMARY --- *@
        <div class="col-lg-4">
            <div class="kfc-card">
                <div class="kfc-card-header">
                    <h5>Thông tin chung</h5>
                </div>
                <div class="card-body p-4">
                    @* Order ID & Status *@
                    <div class="text-center mb-4">
                        <small class="text-uppercase text-muted fw-bold ls-1">Mã đơn hàng</small>
                        <h3 class="fw-bold mb-3">#@Model.Id</h3>

                        @if (Model.Status == "Pending")
                        {
                            <span class="status-badge status-pending"><i class="bi bi-hourglass-split me-1"></i> Chờ xử lý</span>
                        }
                        else if (Model.Status == "Processing")
                        {
                            <span class="status-badge status-processing"><i class="bi bi-fire me-1"></i> Đang chế biến</span>
                        }
                        else if (Model.Status == "Completed")
                        {
                            <span class="status-badge status-completed"><i class="bi bi-check-circle-fill me-1"></i> Hoàn thành</span>
                        }
                        else if (Model.Status == "Cancelled")
                        {
                            <span class="status-badge status-cancelled"><i class="bi bi-x-circle-fill me-1"></i> Đã hủy</span>
                        }
                        else
                        {
                            <span class="status-badge status-default">@Model.Status</span>
                        }
                    </div>

                    <hr class="dashed-line my-4" style="border-top: 2px dashed #eee;">

                    @* Date *@
                    <div class="mb-3">
                        <span class="info-label"><i class="bi bi-calendar-event me-1"></i> Thời gian đặt</span>
                        <span class="info-value">@Model.OrderDate.ToString("dd/MM/yyyy - HH:mm")</span>
                    </div>

                    @* Address *@
                    <div class="mb-3">
                        <span class="info-label"><i class="bi bi-geo-alt-fill me-1"></i> Giao tới</span>
                        <span class="info-value">@Model.DeliveryAddress</span>
                    </div>

                    @* Note *@
                    <div class="mb-4">
                        <span class="info-label"><i class="bi bi-pencil-fill me-1"></i> Ghi chú</span>
                        <div class="bg-light p-2 rounded small text-dark">
                            @(string.IsNullOrEmpty(Model.Notes) ? "Không có ghi chú" : Model.Notes)
                        </div>
                    </div>

                    <hr class="dashed-line my-4" style="border-top: 2px dashed #eee;">

                    @* Total Amount *@
                    <div class="text-center">
                        <span class="info-label text-uppercase mb-1">Tổng thanh toán</span>
                        <div class="total-price-display">
                            @Model.TotalAmount.ToString("N0") ₫
                        </div>
                    </div>
                </div>
            </div>

            @* Help Section *@
            <div class="text-center mt-3">
                <small class="text-muted">Cần hỗ trợ? Liên hệ <a href="#" class="text-danger fw-bold">1900-xxxx</a></small>
            </div>
        </div>
    </div>
</div>