@model FastFoodOnline.Models.Combo
@{
    ViewData["Title"] = Model.Name;
}

<style>
    :root {
        --kfc-red: #E4002B;
        --kfc-dark: #202124;
        --kfc-gray: #f8f9fa;
        --kfc-orange: #ff9f00;
    }

    body {
        background-color: var(--kfc-gray);
    }

    /* Breadcrumb */
    .breadcrumb-item a {
        color: #888;
        font-weight: 600;
        text-decoration: none;
        transition: color 0.2s;
    }

        .breadcrumb-item a:hover {
            color: var(--kfc-red);
        }

    .breadcrumb-item.active {
        color: var(--kfc-red);
        font-weight: 700;
    }

    /* Image Section */
    .combo-image-container {
        background: white;
        border-radius: 20px;
        padding: 0;
        box-shadow: 0 5px 20px rgba(0,0,0,0.05);
        position: relative;
        overflow: hidden;
        height: 100%;
        min-height: 400px;
    }

        .combo-image-container img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94);
        }

        .combo-image-container:hover img {
            transform: scale(1.05);
        }

    .badge-deal {
        position: absolute;
        top: 20px;
        left: 20px;
        background-color: var(--kfc-orange);
        color: white;
        font-weight: 800;
        text-transform: uppercase;
        padding: 8px 16px;
        border-radius: 30px;
        font-size: 0.9rem;
        box-shadow: 0 4px 10px rgba(0,0,0,0.2);
        z-index: 2;
    }

    /* Info Section */
    .combo-title {
        font-weight: 900;
        text-transform: uppercase;
        color: var(--kfc-dark);
        font-size: 2.2rem;
        line-height: 1.1;
        margin-bottom: 1rem;
    }

    .combo-description {
        font-size: 1.05rem;
        color: #666;
        line-height: 1.6;
        margin-bottom: 2rem;
    }

    /* Combo Items List */
    .combo-items-card {
        background-color: white;
        border: 1px dashed #ddd;
        border-radius: 12px;
        padding: 1.5rem;
        margin-bottom: 2rem;
    }

    .combo-item-row {
        display: flex;
        align-items: center;
        padding: 8px 0;
        border-bottom: 1px solid #f5f5f5;
    }

        .combo-item-row:last-child {
            border-bottom: none;
        }

    .item-qty {
        background-color: #fff0f3;
        color: var(--kfc-red);
        font-weight: 700;
        font-size: 0.9rem;
        width: 32px;
        height: 32px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        margin-right: 12px;
    }

    .item-name {
        font-weight: 600;
        color: var(--kfc-dark);
    }

    /* Action Card */
    .action-card {
        background: white;
        border-radius: 20px;
        padding: 2rem;
        box-shadow: 0 10px 30px rgba(0,0,0,0.08);
        border: 1px solid #eee;
    }

    .price-display {
        font-size: 2.5rem;
        font-weight: 900;
        color: var(--kfc-red);
        line-height: 1;
        margin-bottom: 1.5rem;
        display: block;
    }

    .form-control-qty {
        border-radius: 50px;
        padding: 12px;
        font-size: 1.2rem;
        font-weight: 700;
        text-align: center;
        border: 2px solid #eee;
        color: var(--kfc-dark);
    }

        .form-control-qty:focus {
            border-color: var(--kfc-red);
            box-shadow: none;
        }

    .btn-kfc-cart {
        background-color: var(--kfc-red);
        color: white;
        font-weight: 800;
        text-transform: uppercase;
        border-radius: 50px;
        padding: 14px;
        width: 100%;
        border: none;
        font-size: 1.1rem;
        box-shadow: 0 4px 15px rgba(228, 0, 43, 0.4);
        transition: all 0.3s;
    }

        .btn-kfc-cart:hover {
            background-color: #c40024;
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(228, 0, 43, 0.5);
            color: white;
        }

    .btn-back {
        color: #888;
        font-weight: 600;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        margin-top: 1rem;
        transition: all 0.2s;
    }

        .btn-back:hover {
            color: var(--kfc-red);
            transform: translateX(-5px);
        }
</style>

<div class="container mt-3 fade-in-up mb-5">
    @* --- Breadcrumb --- *@
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">TRANG CHỦ</a></li>
            <li class="breadcrumb-item"><a asp-controller="Combos" asp-action="Index">COMBO ƯU ĐÃI</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Name.ToUpper()</li>
        </ol>
    </nav>

    <div class="row align-items-start g-5">
        @* --- Cột Trái: Hình Ảnh --- *@
        <div class="col-lg-6">
            <div class="combo-image-container">
                <span class="badge-deal"><i class="bi bi-lightning-fill me-1"></i> HOT DEAL</span>
                <img src="@Model.ImageUrl" alt="@Model.Name" />
            </div>
        </div>

        @* --- Cột Phải: Thông tin & Đặt hàng --- *@
        <div class="col-lg-6">
            <div class="ps-lg-4">
                @* Title *@
                <h1 class="combo-title">@Model.Name</h1>

                @* Description *@
                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <p class="combo-description">@Model.Description</p>
                }

                @* --- Danh sách món trong Combo --- *@
                <div class="mb-4">
                    <h6 class="text-uppercase text-muted fw-bold mb-3 small ls-1">Combo bao gồm:</h6>

                    @if (Model.Items == null || !Model.Items.Any())
                    {
                        <div class="alert alert-light border border-dashed text-muted small">
                            Đang cập nhật chi tiết món...
                        </div>
                    }
                    else
                    {
                        <div class="combo-items-card">
                            @foreach (var item in Model.Items)
                            {
                                <div class="combo-item-row">
                                    <div class="item-qty">@item.Quantity</div>
                                    <div class="item-name">
                                        @item.Food?.Name
                                    </div>
                                    <i class="bi bi-check-circle-fill text-success ms-auto"></i>
                                </div>
                            }
                        </div>
                    }
                </div>

                @* --- ACTION CARD --- *@
                <div class="action-card">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span class="text-uppercase fw-bold text-muted small ls-1">Giá trọn bộ</span>
                        <span class="badge bg-danger bg-opacity-10 text-danger rounded-pill px-3">Tiết kiệm hơn mua lẻ</span>
                    </div>

                    <span class="price-display">@Model.Price.ToString("N0") ₫</span>

                    @if (Model.IsActive)
                    {
                        <form asp-controller="Order" asp-action="AddComboToCart" method="post">
                            <input type="hidden" name="id" value="@Model.Id" />
                            <div class="row g-3">
                                <div class="col-4">
                                    <input type="number" name="quantity" value="1" min="1" max="50" class="form-control form-control-qty" title="Số lượng" />
                                </div>
                                <div class="col-8">
                                    <button type="submit" class="btn btn-kfc-cart">
                                        <i class="bi bi-cart-check-fill me-2"></i> ĐẶT COMBO
                                    </button>
                                </div>
                            </div>
                        </form>
                    }
                    else
                    {
                        <div class="alert alert-secondary d-flex align-items-center rounded-3 border-0" role="alert">
                            <i class="bi bi-exclamation-circle-fill fs-4 me-3"></i>
                            <div>
                                <strong>Tạm ngưng phục vụ</strong> <br>
                                Combo này hiện chưa có sẵn.
                            </div>
                        </div>
                    }
                </div>

                @* Back Button *@
                <a asp-controller="Combos" asp-action="Index" class="btn-back mt-4">
                    <i class="bi bi-arrow-left me-2"></i> Xem các Combo khác
                </a>
            </div>
        </div>
    </div>
</div>