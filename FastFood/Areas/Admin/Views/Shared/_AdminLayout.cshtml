<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin F&B Chill</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <style>
        :root {
            --kfc-red: #E4002B;
            --kfc-dark: #202124;
            --sidebar-width: 260px;
            --header-height: 60px;
        }

        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            overflow-x: hidden;
        }

        /* --- NAVBAR --- */
        .admin-navbar {
            height: var(--header-height);
            background-color: white;
            box-shadow: 0 2px 15px rgba(0,0,0,0.04);
            position: fixed;
            top: 0;
            right: 0;
            left: 0; /* Full width initially */
            z-index: 1000;
            padding: 0 20px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            transition: left 0.3s ease;
        }

        /* Adjust navbar when sidebar is visible */
        @@media (min-width: 992px) {
            .admin-navbar

        {
            left: var(--sidebar-width);
        }

        }

        .navbar-brand {
            font-weight: 800;
            color: var(--kfc-red);
            font-size: 1.2rem;
            text-transform: uppercase;
            letter-spacing: -0.5px;
        }

        .toggle-btn {
            background: none;
            border: none;
            font-size: 1.5rem;
            color: var(--kfc-dark);
            cursor: pointer;
            margin-right: 15px;
        }

        /* --- SIDEBAR --- */
        .admin-sidebar {
            width: var(--sidebar-width);
            background-color: var(--kfc-dark);
            position: fixed;
            top: 0;
            bottom: 0;
            left: 0;
            z-index: 1001;
            padding-top: 20px;
            transition: transform 0.3s ease;
            box-shadow: 4px 0 15px rgba(0,0,0,0.05);
        }

        .sidebar-brand {
            padding: 0 25px 25px;
            border-bottom: 1px solid rgba(255,255,255,0.1);
            margin-bottom: 20px;
        }

            .sidebar-brand h4 {
                color: white;
                font-weight: 900;
                margin: 0;
                letter-spacing: 1px;
            }

            .sidebar-brand span {
                color: var(--kfc-red);
            }

        .nav-link {
            color: rgba(255,255,255,0.7);
            padding: 12px 25px;
            display: flex;
            align-items: center;
            font-weight: 500;
            transition: all 0.2s;
            border-left: 4px solid transparent;
        }

            .nav-link:hover {
                color: white;
                background-color: rgba(255,255,255,0.05);
            }

            .nav-link.active {
                color: white;
                background-color: rgba(228, 0, 43, 0.1); /* Red tint */
                border-left-color: var(--kfc-red);
                font-weight: 700;
            }

            .nav-link i {
                margin-right: 15px;
                font-size: 1.1rem;
                width: 20px;
                text-align: center;
            }

        .sidebar-heading {
            padding: 20px 25px 10px;
            font-size: 0.75rem;
            text-transform: uppercase;
            color: rgba(255,255,255,0.4);
            font-weight: 700;
            letter-spacing: 1px;
        }

        /* --- MAIN CONTENT --- */
        .main-content {
            margin-top: var(--header-height);
            padding: 30px;
            transition: margin-left 0.3s ease;
        }

        @@media (min-width: 992px) {
            .main-content

        {
            margin-left: var(--sidebar-width);
        }

        }

        /* Mobile Responsive */
        @@media (max-width: 991.98px) {
            .admin-sidebar

        {
            transform: translateX(-100%);
        }

        .admin-sidebar.show {
            transform: translateX(0);
        }

        .overlay {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0,0,0,0.5);
            z-index: 1000;
            display: none;
        }

            .overlay.show {
                display: block;
            }

        }

        /* User Profile Dropdown */
        .user-profile {
            display: flex;
            align-items: center;
            cursor: pointer;
        }

        .avatar-small {
            width: 35px;
            height: 35px;
            background-color: var(--kfc-red);
            color: white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 700;
            margin-right: 10px;
        }
    </style>
</head>
<body>

    <div class="overlay" id="sidebarOverlay"></div>

    <nav class="admin-sidebar" id="adminSidebar">
        <div class="sidebar-brand">
            <h4>F&B<span>CHILL</span></h4>
            <small class="text-muted" style="font-size: 0.75rem;">ADMINISTRATION</small>
        </div>

        <div class="sidebar-menu">
            <a href="@Url.Action("Index", "Dashboard", new { area = "Admin" })"
               class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Dashboard" ? "active" : "")">
                <i class="bi bi-speedometer2"></i> Dashboard
            </a>

            <div class="sidebar-heading">QUẢN LÝ</div>

            <a href="@Url.Action("Index", "Orders", new { area = "Admin" })"
               class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Orders" ? "active" : "")">
                <i class="bi bi-cart-check"></i> Đơn hàng
            </a>

            <a href="@Url.Action("Index", "Products", new { area = "Admin" })"
               class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Products" && ViewContext.RouteData.Values["action"]?.ToString() != "Combos" ? "active" : "")">
                <i class="bi bi-box-seam"></i> Sản phẩm
            </a>

            <a href="@Url.Action("Combos", "Products", new { area = "Admin" })"
               class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Products" && ViewContext.RouteData.Values["action"]?.ToString() == "Combos" ? "active" : "")">
                <i class="bi bi-layers"></i> Combo
            </a>

            <a href="@Url.Action("Index", "Accounts", new { area = "Admin" })"
               class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Accounts" ? "active" : "")">
                <i class="bi bi-people"></i> Tài khoản
            </a>

            <div class="sidebar-heading">HỆ THỐNG</div>

            <a href="@Url.Action("Index", "Home", new { area = "" })" class="nav-link">
                <i class="bi bi-globe"></i> Xem Website
            </a>

            <a href="@Url.Action("Logout", "Account", new { area = "" })" class="nav-link text-danger">
                <i class="bi bi-box-arrow-right"></i> Đăng xuất
            </a>
        </div>
    </nav>

    <nav class="admin-navbar">
        <div class="d-flex align-items-center">
            <button class="toggle-btn d-lg-none" id="sidebarToggle">
                <i class="bi bi-list"></i>
            </button>
            <span class="d-none d-sm-block fw-bold text-secondary">
                @DateTime.Now.ToString("dddd, dd/MM/yyyy")
            </span>
        </div>

        <div class="user-profile">
            <div class="avatar-small">A</div>
            <div class="d-none d-sm-block">
                <div class="fw-bold text-dark" style="font-size: 0.9rem;">@Context.Session.GetString("UserName")</div>
                <div class="text-muted" style="font-size: 0.75rem;">Administrator</div>
            </div>
        </div>
    </nav>

    <main class="main-content">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show shadow-sm border-0" role="alert">
                <i class="bi bi-check-circle-fill me-2"></i> @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show shadow-sm border-0" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @RenderBody()
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const toggleBtn = document.getElementById('sidebarToggle');
            const sidebar = document.getElementById('adminSidebar');
            const overlay = document.getElementById('sidebarOverlay');

            function toggleSidebar() {
                sidebar.classList.toggle('show');
                overlay.classList.toggle('show');
            }

            if(toggleBtn) {
                toggleBtn.addEventListener('click', toggleSidebar);
            }

            if(overlay) {
                overlay.addEventListener('click', toggleSidebar);
            }
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>