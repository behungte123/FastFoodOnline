@model FastFoodOnline.Models.Order

@{
    ViewData["Title"] = "Xóa đơn hàng";
}

<style>
    :root {
        --kfc-red: #E4002B;
        --kfc-dark: #202124;
        --kfc-gray: #f8f9fa;
    }

    body {
        background-color: var(--kfc-gray);
    }

    /* Wrapper căn giữa */
    .delete-wrapper {
        min-height: 80vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
    }

    /* Card chính */
    .kfc-delete-card {
        background: white;
        border-radius: 20px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.08);
        border: none;
        overflow: hidden;
        max-width: 550px;
        width: 100%;
        text-align: center;
        position: relative;
    }

        /* Thanh màu đỏ trên cùng */
        .kfc-delete-card::before {
            content: '';
            display: block;
            height: 6px;
            background: var(--kfc-red);
            width: 100%;
        }

    .card-content {
        padding: 40px 30px;
    }

    /* Icon cảnh báo */
    .warning-icon-wrapper {
        width: 80px;
        height: 80px;
        background-color: #fff0f3;
        color: var(--kfc-red);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 20px;
        font-size: 2.5rem;
        animation: shake 2s infinite;
    }

    @@keyframes shake {
        0%, 100%

    {
        transform: rotate(0deg);
    }

    10%, 30%, 50%, 70%, 90% {
        transform: rotate(-5deg);
    }

    20%, 40%, 60%, 80% {
        transform: rotate(5deg);
    }

    }

    /* Typography */
    .delete-title {
        font-weight: 800;
        color: var(--kfc-dark);
        margin-bottom: 10px;
        text-transform: uppercase;
    }

    .delete-message {
        color: #666;
        font-size: 0.95rem;
        margin-bottom: 30px;
    }

    /* Order Summary Box */
    .order-summary {
        background-color: #f8f9fa;
        border-radius: 12px;
        padding: 20px;
        margin-bottom: 30px;
        text-align: left;
        border: 1px dashed #ddd;
    }

    .info-row {
        display: flex;
        justify-content: space-between;
        margin-bottom: 10px;
        font-size: 0.9rem;
        border-bottom: 1px dashed #eee;
        padding-bottom: 8px;
    }

        .info-row:last-child {
            margin-bottom: 0;
            border-bottom: none;
            padding-bottom: 0;
        }

    .info-label {
        color: #888;
        font-weight: 600;
    }

    .info-value {
        color: var(--kfc-dark);
        font-weight: 700;
        text-align: right;
    }

    /* Badges */
    .badge-soft {
        padding: 4px 10px;
        border-radius: 6px;
        font-size: 0.75rem;
        text-transform: uppercase;
    }

    .badge-pending {
        background-color: #fff3cd;
        color: #856404;
    }

    .badge-processing {
        background-color: #cff4fc;
        color: #055160;
    }

    .badge-completed {
        background-color: #d1e7dd;
        color: #0f5132;
    }

    .badge-cancelled {
        background-color: #f8d7da;
        color: #842029;
    }

    /* Buttons */
    .btn-confirm-delete {
        background-color: var(--kfc-red);
        color: white;
        font-weight: 700;
        border-radius: 50px;
        padding: 12px 30px;
        border: none;
        width: 100%;
        transition: all 0.3s;
        box-shadow: 0 4px 15px rgba(228, 0, 43, 0.3);
    }

        .btn-confirm-delete:hover {
            background-color: #c40024;
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(228, 0, 43, 0.4);
            color: white;
        }

    .btn-cancel {
        color: #666;
        font-weight: 600;
        background: transparent;
        border: none;
        margin-top: 15px;
        display: inline-block;
        transition: color 0.2s;
        text-decoration: none;
    }

        .btn-cancel:hover {
            color: var(--kfc-dark);
            text-decoration: underline;
        }
</style>

<div class="delete-wrapper fade-in-up">
    <div class="kfc-delete-card">
        <div class="card-content">
            <div class="warning-icon-wrapper">
                <i class="bi bi-exclamation-triangle-fill"></i>
            </div>

            <h3 class="delete-title">Xóa đơn hàng?</h3>
            <p class="delete-message">
                Hành động này sẽ xóa vĩnh viễn đơn hàng khỏi cơ sở dữ liệu. <br>
                <strong>Bạn có chắc chắn muốn tiếp tục?</strong>
            </p>

            <div class="order-summary">
                <div class="info-row">
                    <span class="info-label">Mã đơn hàng</span>
                    <span class="info-value">#@Model.Id</span>
                </div>
                <div class="info-row">
                    <span class="info-label">Khách hàng</span>
                    <span class="info-value">@Model.Account?.FullName</span>
                </div>
                <div class="info-row">
                    <span class="info-label">Ngày đặt</span>
                    <span class="info-value">@Model.OrderDate.ToString("dd/MM/yyyy")</span>
                </div>
                <div class="info-row">
                    <span class="info-label">Tổng tiền</span>
                    <span class="info-value text-danger">@Model.TotalAmount.ToString("N0") đ</span>
                </div>
                <div class="info-row align-items-center">
                    <span class="info-label">Trạng thái</span>
                    <span class="info-value">
                        @if (Model.Status == "Pending")
                        {
                            <span class="badge badge-soft badge-pending">Chờ xử lý</span>
                        }
                        else if (Model.Status == "Processing")
                        {

                            <span class="badge badge-soft badge-processing">Đang xử lý</span>
                        }
                        else if (Model.Status == "Completed")
                        {

                            <span class="badge badge-soft badge-completed">Hoàn thành</span>
                        }
                        else if (Model.Status == "Cancelled")
                        {

                            <span class="badge badge-soft badge-cancelled">Đã hủy</span>
                        }
                        else
                        {

                            <span>@Model.Status</span>
                        }
                    </span>
                </div>
            </div>

            <form asp-action="Delete" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <button type="submit" class="btn btn-confirm-delete">
                    <i class="bi bi-trash-fill me-2"></i> XÁC NHẬN XÓA
                </button>

                <br>

                <a asp-action="Index" class="btn-cancel">
                    Hủy bỏ, giữ lại đơn hàng
                </a>
            </form>
        </div>
    </div>
</div>