@model FastFoodOnline.Models.Food

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<style>
    :root {
        --kfc-red: #E4002B;
        --kfc-dark: #202124;
        --kfc-gray: #f8f9fa;
    }

    body {
        background-color: var(--kfc-gray);
    }

    /* Card Wrapper */
    .kfc-detail-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.03);
        border: none;
        overflow: hidden;
        margin-top: 20px;
    }

    /* Image Section */
    .product-image-wrapper {
        background-color: #fff;
        height: 100%;
        min-height: 400px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-right: 1px solid #f0f0f0;
        padding: 30px;
        position: relative;
    }

        .product-image-wrapper img {
            max-width: 100%;
            max-height: 350px;
            object-fit: contain;
            transition: transform 0.3s ease;
        }

            .product-image-wrapper img:hover {
                transform: scale(1.05);
            }

    .no-image-placeholder {
        text-align: center;
        color: #dee2e6;
    }

    /* Content Section */
    .product-content {
        padding: 40px;
    }

    .product-title {
        font-weight: 900;
        color: var(--kfc-dark);
        font-size: 2rem;
        margin-bottom: 10px;
        text-transform: uppercase;
        line-height: 1.2;
    }

    .product-id {
        font-size: 0.9rem;
        color: #999;
        margin-bottom: 20px;
        font-weight: 600;
        letter-spacing: 1px;
    }

    .product-price {
        font-size: 1.8rem;
        font-weight: 800;
        color: var(--kfc-red);
        margin-bottom: 20px;
        display: block;
    }

    /* Badges */
    .badge-soft {
        padding: 6px 12px;
        border-radius: 6px;
        font-weight: 700;
        font-size: 0.8rem;
        text-transform: uppercase;
        margin-right: 10px;
    }

    .badge-soft-success {
        background-color: #d1e7dd;
        color: #0f5132;
    }

    .badge-soft-secondary {
        background-color: #e2e3e5;
        color: #41464b;
    }

    .badge-category {
        background-color: #fff3cd;
        color: #856404;
    }

    /* Info Block */
    .info-label {
        font-size: 0.75rem;
        text-transform: uppercase;
        color: #888;
        font-weight: 700;
        margin-bottom: 5px;
        display: block;
        letter-spacing: 0.5px;
    }

    .description-box {
        background-color: #f9f9f9;
        padding: 20px;
        border-radius: 12px;
        color: #555;
        line-height: 1.6;
        margin-bottom: 25px;
        border-left: 4px solid var(--kfc-red);
    }

    .tag-item {
        display: inline-block;
        background: #fff0f3;
        color: var(--kfc-red);
        padding: 4px 10px;
        border-radius: 4px;
        font-size: 0.85rem;
        font-weight: 600;
        margin-right: 5px;
    }

    /* Buttons */
    .action-bar {
        margin-top: 30px;
        display: flex;
        gap: 15px;
        align-items: center;
    }

    .btn-edit {
        background-color: var(--kfc-red);
        color: white;
        border-radius: 50px;
        padding: 10px 30px;
        font-weight: 700;
        border: none;
        transition: all 0.2s;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
    }

        .btn-edit:hover {
            background-color: #c40024;
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 4px 10px rgba(228, 0, 43, 0.2);
        }

    .btn-back {
        background-color: #f0f0f0;
        color: #666;
        border-radius: 50px;
        padding: 10px 25px;
        font-weight: 700;
        border: none;
        text-decoration: none;
        transition: all 0.2s;
    }

        .btn-back:hover {
            background-color: #e0e0e0;
            color: var(--kfc-dark);
        }

    .btn-delete-link {
        color: #dc3545;
        font-weight: 600;
        text-decoration: underline;
        margin-left: auto; /* Đẩy sang phải */
        transition: color 0.2s;
    }

        .btn-delete-link:hover {
            color: #a71d2a;
        }
</style>

<div class="container-fluid fade-in-up mb-5">
    <div class="d-flex justify-content-between align-items-center mt-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="@Url.Action("Index")" class="text-decoration-none text-muted">Sản phẩm</a></li>
                <li class="breadcrumb-item active text-dark fw-bold" aria-current="page">Chi tiết</li>
            </ol>
        </nav>
    </div>

    <div class="kfc-detail-card">
        <div class="row g-0">
            <div class="col-lg-5">
                <div class="product-image-wrapper">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" alt="@Model.Name" />
                    }
                    else
                    {
                        <div class="no-image-placeholder">
                            <i class="bi bi-image" style="font-size: 5rem;"></i>
                            <p class="mt-2 fw-bold">Chưa có hình ảnh</p>
                        </div>
                    }
                </div>
            </div>

            <div class="col-lg-7">
                <div class="product-content">
                    <div class="product-id">ID: #@Model.Id</div>

                    <h1 class="product-title">@Model.Name</h1>

                    <div class="d-flex align-items-center mb-4">
                        <span class="badge badge-soft badge-category">
                            <i class="bi bi-grid-fill me-1"></i> @Model.Category?.Name
                        </span>

                        @if (Model.IsActive)
                        {
                            <span class="badge badge-soft badge-soft-success">
                                <i class="bi bi-check-circle-fill me-1"></i> Đang kinh doanh
                            </span>
                        }
                        else
                        {
                            <span class="badge badge-soft badge-soft-secondary">
                                <i class="bi bi-pause-circle-fill me-1"></i> Ngừng bán
                            </span>
                        }
                    </div>

                    <span class="product-price">@Model.Price.ToString("N0") <small style="font-size: 1rem; color: #999;">VNĐ</small></span>

                    <span class="info-label">Mô tả sản phẩm</span>
                    <div class="description-box">
                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            @Model.Description
                        }
                        else
                        {
                            <span class="fst-italic text-muted">Không có mô tả chi tiết.</span>
                        }
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Tag))
                    {
                        <div class="mb-4">
                            <span class="info-label mb-2">Từ khóa (Tags)</span>
                            <div>
                                @foreach (var tag in Model.Tag.Split(','))
                                {
                                    <span class="tag-item">#@tag.Trim()</span>
                                }
                            </div>
                        </div>
                    }

                    <div class="action-bar">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn-edit">
                            <i class="bi bi-pencil-square me-2"></i> Chỉnh sửa
                        </a>
                        <a asp-action="Index" class="btn-back">
                            Quay lại
                        </a>

                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn-delete-link">
                            <i class="bi bi-trash"></i> Xóa sản phẩm
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>