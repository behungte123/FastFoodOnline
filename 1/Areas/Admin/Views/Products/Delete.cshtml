@model FastFoodOnline.Models.Food

@{
    ViewData["Title"] = "Xóa sản phẩm";
}

<style>
    :root {
        --kfc-red: #E4002B;
        --kfc-dark: #202124;
        --kfc-gray: #f8f9fa;
    }

    body {
        background-color: var(--kfc-gray);
    }

    /* Wrapper căn giữa */
    .delete-wrapper {
        min-height: 80vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
    }

    /* Card chính */
    .kfc-delete-card {
        background: white;
        border-radius: 20px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.08);
        border: none;
        overflow: hidden;
        max-width: 500px;
        width: 100%;
        text-align: center;
        position: relative;
    }

        /* Thanh màu đỏ trên cùng */
        .kfc-delete-card::before {
            content: '';
            display: block;
            height: 6px;
            background: var(--kfc-red);
            width: 100%;
        }

    .card-content {
        padding: 40px 30px;
    }

    /* Icon cảnh báo */
    .warning-icon-wrapper {
        width: 80px;
        height: 80px;
        background-color: #fff0f3;
        color: var(--kfc-red);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 20px;
        font-size: 2.5rem;
        animation: shake 2s infinite;
    }

    @@keyframes shake {
        0%, 100%

    {
        transform: rotate(0deg);
    }

    10%, 30%, 50%, 70%, 90% {
        transform: rotate(-5deg);
    }

    20%, 40%, 60%, 80% {
        transform: rotate(5deg);
    }

    }

    /* Typography */
    .delete-title {
        font-weight: 800;
        color: var(--kfc-dark);
        margin-bottom: 10px;
        text-transform: uppercase;
    }

    .delete-message {
        color: #666;
        font-size: 0.95rem;
        margin-bottom: 30px;
    }

    /* Product Summary Box */
    .product-summary {
        background-color: #f8f9fa;
        border-radius: 12px;
        overflow: hidden;
        margin-bottom: 30px;
        text-align: left;
        border: 1px dashed #ddd;
    }

    .product-image-container {
        height: 180px;
        background-color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        border-bottom: 1px solid #eee;
        padding: 10px;
    }

    .product-image {
        max-width: 100%;
        max-height: 100%;
        object-fit: contain;
    }

    .product-info {
        padding: 15px 20px;
    }

    .info-row {
        display: flex;
        justify-content: space-between;
        margin-bottom: 8px;
        font-size: 0.9rem;
    }

    .info-label {
        color: #888;
        font-weight: 600;
    }

    .info-value {
        color: var(--kfc-dark);
        font-weight: 700;
        text-align: right;
    }

    /* Badges */
    .badge-soft {
        padding: 4px 10px;
        border-radius: 6px;
        font-size: 0.75rem;
        text-transform: uppercase;
    }

    .badge-success {
        background-color: #d1e7dd;
        color: #0f5132;
    }

    .badge-secondary {
        background-color: #e2e3e5;
        color: #41464b;
    }

    /* Buttons */
    .btn-confirm-delete {
        background-color: var(--kfc-red);
        color: white;
        font-weight: 700;
        border-radius: 50px;
        padding: 12px 30px;
        border: none;
        width: 100%;
        transition: all 0.3s;
        box-shadow: 0 4px 15px rgba(228, 0, 43, 0.3);
    }

        .btn-confirm-delete:hover {
            background-color: #c40024;
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(228, 0, 43, 0.4);
            color: white;
        }

    .btn-cancel {
        color: #666;
        font-weight: 600;
        background: transparent;
        border: none;
        margin-top: 15px;
        display: inline-block;
        transition: color 0.2s;
        text-decoration: none;
    }

        .btn-cancel:hover {
            color: var(--kfc-dark);
            text-decoration: underline;
        }
</style>

<div class="delete-wrapper fade-in-up">
    <div class="kfc-delete-card">
        <div class="card-content">
            <div class="warning-icon-wrapper">
                <i class="bi bi-trash3-fill"></i>
            </div>

            <h3 class="delete-title">Xóa sản phẩm?</h3>
            <p class="delete-message">
                Hành động này sẽ xóa món ăn khỏi thực đơn vĩnh viễn. <br>
                <strong>Bạn có chắc chắn muốn tiếp tục?</strong>
            </p>

            <div class="product-summary">
                <div class="product-image-container">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" class="product-image" alt="@Model.Name" />
                    }
                    else
                    {
                        <div class="text-muted text-center">
                            <i class="bi bi-image fs-1 d-block mb-2"></i>
                            <small>Không có hình ảnh</small>
                        </div>
                    }
                </div>

                <div class="product-info">
                    <h5 class="fw-bold mb-3 text-center text-uppercase">@Model.Name</h5>

                    <div class="info-row">
                        <span class="info-label">Danh mục</span>
                        <span class="info-value">@Model.Category?.Name</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Giá bán</span>
                        <span class="info-value text-danger">@Model.Price.ToString("N0") đ</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Trạng thái</span>
                        <span class="info-value">
                            @if (Model.IsActive)
                            {
                                <span class="badge badge-soft badge-success">Đang bán</span>
                            }
                            else
                            {
                                <span class="badge badge-soft badge-secondary">Ngừng bán</span>
                            }
                        </span>
                    </div>
                </div>
            </div>

            <form asp-action="Delete" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <button type="submit" class="btn btn-confirm-delete">
                    <i class="bi bi-trash-fill me-2"></i> XÓA SẢN PHẨM
                </button>

                <br>

                <a asp-action="Index" class="btn-cancel">
                    Hủy bỏ, quay lại danh sách
                </a>
            </form>
        </div>
    </div>
</div>