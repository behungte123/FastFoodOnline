@model IEnumerable<FastFoodOnline.Models.Food>

@{
    ViewData["Title"] = "Quản lý sản phẩm";
}

<style>
    :root {
        --kfc-red: #E4002B;
        --kfc-dark: #202124;
        --kfc-gray: #f8f9fa;
    }

    body {
        background-color: var(--kfc-gray);
    }

    /* Page Header */
    .page-header h2 {
        color: var(--kfc-dark);
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: -0.5px;
    }

    /* Card Layout */
    .table-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.03);
        border: none;
        overflow: hidden;
    }

    .table-toolbar {
        padding: 20px 25px;
        border-bottom: 1px solid #eee;
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 15px;
    }

    /* Table Styles */
    .admin-table thead th {
        background-color: #fcfcfc;
        color: #888;
        font-weight: 700;
        text-transform: uppercase;
        font-size: 0.75rem;
        border-bottom: 2px solid #eee;
        padding: 15px 20px;
        letter-spacing: 0.5px;
    }

    .admin-table tbody td {
        padding: 12px 20px;
        vertical-align: middle;
        border-bottom: 1px dashed #eee;
        color: #444;
        font-weight: 500;
        font-size: 0.9rem;
    }

    .admin-table tbody tr:hover {
        background-color: #fffbfc;
    }

    /* Product Image */
    .product-thumb {
        width: 50px;
        height: 50px;
        border-radius: 10px;
        object-fit: cover;
        border: 1px solid #eee;
        background-color: #fff;
    }

    .product-name {
        font-weight: 700;
        color: var(--kfc-dark);
        display: block;
        margin-bottom: 2px;
    }

    .product-cat {
        font-size: 0.75rem;
        color: #888;
    }

    /* Badges */
    .badge-soft {
        padding: 6px 12px;
        border-radius: 6px;
        font-weight: 700;
        font-size: 0.7rem;
        text-transform: uppercase;
    }

    .badge-soft-success {
        background-color: #d1e7dd;
        color: #0f5132;
    }

    .badge-soft-secondary {
        background-color: #e2e3e5;
        color: #41464b;
    }

    .badge-category {
        background-color: #fff0f3;
        color: var(--kfc-red);
        border: 1px solid #ffccd5;
        padding: 4px 8px;
        border-radius: 4px;
        font-size: 0.75rem;
        font-weight: 600;
    }

    /* Buttons */
    .btn-add-new {
        background-color: var(--kfc-red);
        color: white;
        border-radius: 50px;
        padding: 8px 20px;
        font-weight: 700;
        border: none;
        box-shadow: 0 4px 10px rgba(228, 0, 43, 0.2);
        transition: all 0.2s;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
    }

        .btn-add-new:hover {
            background-color: #c40024;
            transform: translateY(-2px);
            color: white;
        }

    .btn-combo {
        background-color: white;
        color: var(--kfc-dark);
        border: 2px solid #eee;
        border-radius: 50px;
        padding: 6px 18px;
        font-weight: 700;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        transition: all 0.2s;
        margin-right: 10px;
    }

        .btn-combo:hover {
            border-color: var(--kfc-dark);
            background-color: var(--kfc-dark);
            color: white;
        }

    /* Action Icons (Fixed) */
    .action-btn {
        width: 32px;
        height: 32px;
        border-radius: 8px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        color: #666;
        transition: all 0.2s;
        background-color: transparent;
        border: 1px solid transparent;
        margin-left: 5px;
        text-decoration: none;
    }

        .action-btn i {
            font-size: 1rem;
            line-height: 1;
        }

        .action-btn:hover {
            background-color: #f0f0f0;
            color: var(--kfc-red);
        }

        .action-btn.btn-delete:hover {
            background-color: #fff0f3;
            color: #dc3545;
            border-color: #ffccd5;
        }
</style>

<div class="container-fluid py-4 fade-in-up">
    <div class="d-flex justify-content-between align-items-center mb-4 page-header">
        <div>
            <h2 class="mb-1">Sản phẩm</h2>
            <p class="text-muted mb-0">Quản lý thực đơn và danh sách món ăn.</p>
        </div>
        <div>
            <a href="@Url.Action("Combos")" class="btn-combo">
                <i class="bi bi-layers me-2"></i> Quản lý Combo
            </a>
            <a href="@Url.Action("Create")" class="btn-add-new">
                <i class="bi bi-plus-lg me-1"></i> Thêm món mới
            </a>
        </div>
    </div>

    <div class="table-card">
        <div class="table-toolbar">
            <div class="d-flex align-items-center">
                <h5 class="mb-0 fw-bold text-uppercase text-dark border-start border-4 border-danger ps-3">Danh sách món</h5>
            </div>
            <div class="d-flex">
                <div class="input-group">
                    <span class="input-group-text bg-light border-end-0"><i class="bi bi-search text-muted"></i></span>
                    <input type="text" class="form-control bg-light border-start-0" placeholder="Tìm tên món ăn..." style="max-width: 250px;">
                </div>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table admin-table mb-0">
                <thead>
                    <tr>
                        <th class="ps-4" style="width: 80px;">ID</th>
                        <th style="width: 300px;">Thông tin món</th>
                        <th>Danh mục</th>
                        <th>Giá bán</th>
                        <th>Trạng thái</th>
                        <th class="text-end pe-4">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var food in Model)
                    {
                        <tr>
                            <td class="ps-4 fw-bold text-muted">#@food.Id</td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="me-3">
                                        @if (!string.IsNullOrEmpty(food.ImageUrl))
                                        {
                                            <img src="@food.ImageUrl" alt="@food.Name" class="product-thumb" />
                                        }
                                        else
                                        {
                                            <div class="product-thumb d-flex align-items-center justify-content-center text-muted bg-light">
                                                <i class="bi bi-image"></i>
                                            </div>
                                        }
                                    </div>
                                    <div>
                                        <span class="product-name">@food.Name</span>
                                        @if (!string.IsNullOrEmpty(food.Description))
                                        {
                                            <span class="product-cat text-truncate d-block" style="max-width: 180px;">@food.Description</span>
                                        }
                                    </div>
                                </div>
                            </td>
                            <td>
                                <span class="badge-category">@food.Category?.Name</span>
                            </td>
                            <td class="fw-bold text-danger">@food.Price.ToString("N0") ₫</td>
                            <td>
                                @if (food.IsActive)
                                {
                                    <span class="badge badge-soft badge-soft-success">
                                        <i class="bi bi-check-circle me-1"></i> Đang bán
                                    </span>
                                }
                                else
                                {
                                    <span class="badge badge-soft badge-soft-secondary">
                                        <i class="bi bi-slash-circle me-1"></i> Ngừng bán
                                    </span>
                                }
                            </td>
                            <td class="text-end pe-4">
                                <a href="@Url.Action("Details", new { id = food.Id })" class="action-btn" title="Xem chi tiết">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a href="@Url.Action("Edit", new { id = food.Id })" class="action-btn" title="Chỉnh sửa">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a href="@Url.Action("Delete", new { id = food.Id })" class="action-btn btn-delete" title="Xóa" onclick="return confirm('Bạn có chắc muốn xóa món này?');">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="p-3 border-top bg-light d-flex justify-content-end">
            <small class="text-muted">Hiển thị @Model.Count() món ăn</small>
        </div>
    </div>
</div>