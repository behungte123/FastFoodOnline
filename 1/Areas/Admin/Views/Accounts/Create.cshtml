@model FastFoodOnline.Models.Account

@{
    ViewData["Title"] = "Tạo tài khoản mới";
}

<style>
    :root {
        --kfc-red: #E4002B;
        --kfc-dark: #202124;
        --kfc-gray: #f8f9fa;
    }

    body {
        background-color: var(--kfc-gray);
    }

    /* Form Card Container */
    .kfc-form-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.03);
        border: none;
        overflow: hidden;
        max-width: 900px;
        margin: 0 auto;
    }

    .kfc-card-header {
        background-color: white;
        padding: 20px 30px;
        border-bottom: 2px solid #f0f0f0;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

        .kfc-card-header h4 {
            color: var(--kfc-dark);
            font-weight: 800;
            text-transform: uppercase;
            margin: 0;
            border-left: 5px solid var(--kfc-red);
            padding-left: 15px;
            letter-spacing: 0.5px;
        }

    /* Inputs */
    .form-label {
        font-weight: 600;
        color: var(--kfc-dark);
        font-size: 0.9rem;
        margin-bottom: 8px;
    }

    .form-control, .form-select {
        border-radius: 10px;
        padding: 12px 15px;
        border: 1px solid #dee2e6;
        background-color: #fcfcfc;
        transition: all 0.3s;
    }

        .form-control:focus, .form-select:focus {
            border-color: var(--kfc-red);
            box-shadow: 0 0 0 0.2rem rgba(228, 0, 43, 0.15);
            background-color: #fff;
        }

    /* Section Divider */
    .form-section-title {
        font-size: 0.8rem;
        text-transform: uppercase;
        color: #999;
        font-weight: 700;
        margin-bottom: 15px;
        letter-spacing: 1px;
        border-bottom: 1px dashed #eee;
        padding-bottom: 5px;
    }

    /* Buttons */
    .btn-save {
        background-color: var(--kfc-red);
        color: white;
        font-weight: 800;
        text-transform: uppercase;
        border-radius: 50px;
        padding: 12px 40px;
        border: none;
        box-shadow: 0 4px 10px rgba(228, 0, 43, 0.3);
        transition: all 0.3s;
    }

        .btn-save:hover {
            background-color: #c40024;
            transform: translateY(-2px);
            color: white;
        }

    .btn-back {
        background-color: #f0f0f0;
        color: #666;
        border-radius: 50px;
        padding: 12px 25px;
        font-weight: 700;
        border: none;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        transition: all 0.2s;
    }

        .btn-back:hover {
            background-color: #e0e0e0;
            color: var(--kfc-dark);
        }
</style>

<div class="container-fluid py-4 fade-in-up">
    <div class="kfc-form-card">
        <div class="kfc-card-header">
            <h4>Thêm tài khoản mới</h4>
            <a asp-action="Index" class="btn-back">
                <i class="bi bi-arrow-left me-2"></i> Quay lại
            </a>
        </div>

        <div class="card-body p-4 p-md-5">
            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3 mb-4"></div>

                @* --- Nhóm 1: Thông tin đăng nhập --- *@
                <div class="form-section-title mt-0">
                    <i class="bi bi-shield-lock me-1"></i> Thông tin đăng nhập & Vai trò
                </div>

                <div class="row g-4 mb-4">
                    <div class="col-md-6">
                        <label asp-for="Email" class="form-label">Email đăng nhập <span class="text-danger">*</span></label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0 text-muted"><i class="bi bi-envelope"></i></span>
                            <input asp-for="Email" class="form-control border-start-0 ps-0" placeholder="example@email.com" type="email" />
                        </div>
                        <span asp-validation-for="Email" class="text-danger small mt-1 d-block"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Password" class="form-label">Mật khẩu <span class="text-danger">*</span></label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0 text-muted"><i class="bi bi-key"></i></span>
                            <input asp-for="Password" class="form-control border-start-0 ps-0" type="password" placeholder="••••••••" />
                        </div>
                        <span asp-validation-for="Password" class="text-danger small mt-1 d-block"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="RoleId" class="form-label">Phân quyền</label>
                        <select asp-for="RoleId" class="form-select">
                            @if (ViewBag.Roles != null)
                            {
                                foreach (var role in ViewBag.Roles)
                                {
                                    <option value="@role.Id">@role.Name</option>
                                }
                            }
                        </select>
                        <span asp-validation-for="RoleId" class="text-danger small mt-1 d-block"></span>
                    </div>
                </div>

                @* --- Nhóm 2: Thông tin cá nhân --- *@
                <div class="form-section-title mt-4">
                    <i class="bi bi-person-vcard me-1"></i> Thông tin cá nhân
                </div>

                <div class="row g-4 mb-4">
                    <div class="col-md-6">
                        <label asp-for="FullName" class="form-label">Họ và tên</label>
                        <input asp-for="FullName" class="form-control" placeholder="Nhập họ tên đầy đủ" />
                        <span asp-validation-for="FullName" class="text-danger small mt-1 d-block"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="DateOfBirth" class="form-label">Ngày sinh</label>
                        <input asp-for="DateOfBirth" class="form-control" type="date" />
                        <span asp-validation-for="DateOfBirth" class="text-danger small mt-1 d-block"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="PhoneNumber" class="form-label">Số điện thoại</label>
                        <input asp-for="PhoneNumber" class="form-control" placeholder="09xxxxxxx" />
                        <span asp-validation-for="PhoneNumber" class="text-danger small mt-1 d-block"></span>
                    </div>

                    <div class="col-12">
                        <label asp-for="Address" class="form-label">Địa chỉ</label>
                        <textarea asp-for="Address" class="form-control" rows="3" placeholder="Nhập địa chỉ liên hệ..."></textarea>
                        <span asp-validation-for="Address" class="text-danger small mt-1 d-block"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-end pt-3 border-top">
                    <button type="submit" class="btn btn-save">
                        <i class="bi bi-check-lg me-2"></i> Tạo tài khoản
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}